# --- CONFIGURAÇÃO GERAL ---
DJANGO_ENV=production
SECRET_KEY=sua-chave-secreta-forte-aqui
DEBUG=False
ALLOWED_HOSTS=protocolo.med.br,www.protocolo.med.br,api.protocolo.med.br
CORS_ALLOWED_ORIGINS=https://protocolo.med.br,https://www.protocolo.med.br

# --- BANCO DE DADOS (PostgreSQL) ---
# Se usar Docker interno, geralmente o host é 'db'
DB_NAME=protocolomed_prod
DB_USER=protocolomed_user
DB_PASSWORD=sua_senha_banco_forte
DB_HOST=db
DB_PORT=5432

# --- EMAIL (Resend) ---
RESEND_API_KEY=re_123456789
EMAIL_HOST_USER=resend
EMAIL_HOST_PASSWORD=re_123456789
DEFAULT_FROM_EMAIL=ProtocoloMed <noreply@protocolo.med.br>

# --- BITRIX24 (CRM) ---
BITRIX_WEBHOOK_URL=https://b24-xxxxx.bitrix24.com.br/rest/1/yyyyyy/

# --- PAGAMENTOS (ASAAS) ---
# Use a chave de PRODUÇÃO (inicia com '$aact_...')
ASAAS_API_KEY=$aact_...
ASAAS_API_URL=https://www.asaas.com/api/v3/
# Token UUID v4 gerado para proteger o Webhook
ASAAS_WEBHOOK_ACCESS_TOKEN=seu-uuid-v4-aqui

# --- REDIS (Cache) ---
REDIS_URL=redis://redis:6379/1
